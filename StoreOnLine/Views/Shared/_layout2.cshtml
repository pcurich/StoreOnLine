@using StoreOnLine.Service.Business
@using StoreOnLine.Service.Security
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" content="" />
    <title>@ViewBag.Title</title>
    @ScriptHelpers.Favicon("/Themes/" + SiteSettingString.GetUserValue("SiteTheme") + "/favicon.ico")
    @ScriptHelpers.Style("/Themes/" + SiteSettingString.GetUserValue("SiteTheme") + "/Style.css")
    @ScriptHelpers.Style("/Themes/override_content.css")
    <script src="@Url.Content("/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @Html.RequireJs("/Scripts/jquery.validate.min.js")
    @Html.RequireJs("/Scripts/eDialog/edialog.js")
    @ScriptHelpers.Script("/Scripts/Site/sitescript.js")
    <script src="@Url.Content("/Scripts/Site/menuscript.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Scripts/Site/_Layout.js")" type="text/javascript"></script>
    
    @{
        int? pageId = ViewBag.id;
        bool isGenerateSubMenu = false;
        bool showMenuOnTop = SiteSettingString.GetBoolean("ShowMenuOnTop");
        bool showMenuHead = SiteSettingString.GetBoolean("ShowMenuHead");
        bool hideLogOnControl = SiteSettingString.GetBoolean("AccountHideLogin");
        string action = ViewContext.RouteData.Values["action"].ToString();
        bool isAdministratorOrContentAdministrator = Role.IsAdministratorOrContentAdministrator();
        bool isCmsPage = true;
        
        if (action.ToLower() != "page")
        {
            isGenerateSubMenu = true;
            isCmsPage = false;
        }
        else
        {
            isGenerateSubMenu = SiteSettingString.GetBoolean("MenuSubHeader");
        }
     }

    <meta name="keywords" content="@ViewBag.pagekeywords" />
    <meta name="description" content="@ViewBag.pagedescription" />
</head>
<body></body>
</html>
