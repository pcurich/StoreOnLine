<!DOCTYPE html>
@using StoreOnLine.DataBase.Model.Security
@using StoreOnLine.Infrastructure.Helper
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link href="~/Content/DataTables-1.10.2/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/Content/DataTables-1.10.2/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-switch/bootstrap3/bootstrap-switch.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
</head>
<body>
    @(Html.Loader(new { @style = "style='max-height: 100%; max-width: 100%;'" }))

    @*        <div id="loading" class="ui-loader-default " style="display: none">
            <img src="~/Content/images/ajax-loader.gif" style="max-height: 100%; max-width: 100%;" />
        </div>*@

    <div class="navbar navbar-inverse navbar-fixed-top">
        <a class="navbar-brand" href="#">
            <span class="hidden-xs">SPORTS STORE</span>
            <div class="visible-xs">SPORTS</div>
            <div class="visible-xs">STORE</div>
        </a>
        @*@Html.Action("Summary", "Cart", new { Area = "Shopping" })*@

        @{
            var user = (User)Session["UserOnLine"];
            <div></div>
            <div class="container-fluid pull-right" style="background-color: gold">
                @{
                    <h5>@(user != null ? user.UserName : "Anonimo") 
                        @Html.ActionLink("Salir", "Logout", "Account", new { Area = "Security" }, new { @class = "btn btn-success" })
                    </h5>
                }
            </div>
        }
        }

        <div class="visible-xs">
            @Html.Action("MenuCategory", "Nav", new { Area = "Shopping", horizontalLayout = true })
        </div>
    </div>



    <div class="container">
        @*@if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }*@
        @RenderBody()
    </div>

</body>


<script src="~/Scripts/jquery-1.11.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<script src="~/Scripts/DataTables-1.10.2/jquery.dataTables.js"></script>
<script src="~/Scripts/DataTables-1.10.2/dataTables.bootstrap.js"></script>
<script src="~/Scripts/bootstrap-switch.js"></script>
<script src="~/Scripts/notify.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/bootstrap-datepicker.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        var salida = '@TempData["message"]';
        if (salida.length > 0) {
            $.notify("Do not press this button" + salida, "success", "success");
        }
    });
</script>

