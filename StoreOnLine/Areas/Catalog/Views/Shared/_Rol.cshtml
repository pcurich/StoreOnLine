@model IEnumerable<CategoryRol>

<div class="col-lg-10">
    <table id="DataTableCategoryRol" class="table table-striped ">
        <thead>
            <tr>
                <th>http://viralpatel.net/blogs/multiple-checkbox-select-deselect-jquery-tutorial-example/</th>
                <th>Id</th>
                <th>Rol</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.CheckBox(item.Rol.Name, new { onchange = "SomeMethod(this)" })</td>
                    <td>@item.Rol.Id</td>
                    <td>@item.Rol.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>


