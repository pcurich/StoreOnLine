@model System.Collections.Generic.IEnumerable<string>

@Html.ActionLink("Home", "List", "ProductBase", new { Area = "Shopping" },
new { @class = "list-group-item active" })
@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        area = "Shopping",
        controller = "ProductBase",
        action = "List",
        category = link,
        page = 1
    }, new
    {
        @class = "list-group-item" + (link == ViewBag.SelectedCategory ? " active" : "")
    })
}