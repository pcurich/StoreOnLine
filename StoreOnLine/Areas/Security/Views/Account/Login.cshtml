@model StoreOnLine.Areas.Security.Models.LoginViewModel

@{
    ViewBag.Title = "Admin: Log In";
    Layout = "~/Views/Shared/_LogInLayout.cshtml";
}
<br />
<br />
<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading text-center ">
        <h4>@StoreOnLine.Resources.Resources.LoginTitle</h4>
        <h5>@StoreOnLine.Resources.Resources.LoginSubTitle</h5>
    </div>

    <div class="panel-body ">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-tag"></i></span>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Your Username " })
            </div>
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password " })
            </div>

            <div class="form-group">
                <label class="checkbox-inline">
                    <input type="checkbox" />@StoreOnLine.Resources.Resources.LoginRemember</label>
                <span class="pull-right">
                    <a href="#">@StoreOnLine.Resources.Resources.LoginForgotPassword ?</a>
                </span>
            </div>
             
            <input type="submit" value="@StoreOnLine.Resources.Resources.LoginLogIn" class="btn btn-primary  " />
            <hr />
            <div class="form-group input-group">
                @StoreOnLine.Resources.Resources.LoginRegister ? <a href="registeration.html">@StoreOnLine.Resources.Resources.LoginClick</a>
            </div>
        }
    </div>

</div>
