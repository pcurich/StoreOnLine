@model StoreOnLine.Areas.Security.Models.LoginViewModel

@{
    ViewBag.Title = "Admin: Log In";
    Layout = "~/Views/Shared/_LogInLayout.cshtml";
}
<br/><br/><br/><br/>
<div class="container">
    <div class="container-fluid">
        <div class="col-lg-6 col-lg-offset-3 center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="text-center">Autenticación</h3>
                </div>
                <div class="panel-body ">
                    <p class="lead text-center">Ingrese sus datos para continuar</p>
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary()
                        <div class="form-group text-center">
                            <div class="form-inline">
                                <label>User Name:</label>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <div class="form-inline">
                                <label>Password:</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <input type="submit" value="Log in" class="btn btn-primary pull-right" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>
