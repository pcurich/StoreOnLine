            </div>
            <div class="tab-pane" id="Credenciales">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.UserName, new { @class = "control-label", PlaceHolder = "Ingrese un usuario" })
                                </div>
