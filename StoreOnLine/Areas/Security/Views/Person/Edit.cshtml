                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.UserPassword, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.UserPassword, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ingrese el nombre del usuario" } })
                                    @*@Html.ValidationMessageFor(m => m.UserPassword)*@
