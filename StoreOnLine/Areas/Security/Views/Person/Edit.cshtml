                </div>
            </div>
            <div class="tab-pane" id="Documentos">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.DocumentTypeId, new { @class = "control-label", PlaceHolder = "Ingrese un usuario" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.DropDownListFor(m => m.DocumentTypeId,
                                            (SelectList)ViewBag.DocumentType,
                                            "------------------------------",
                                            new { @class = "form-control btn btn-primary" })
                                    @*@Html.ValidationMessageFor(m => m.DocumentTypeId)*@
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.DocumentValue, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.DocumentValue, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ingrese el nombre del usuario" } })
                                    @*@Html.ValidationMessageFor(m => m.DocumentValue)*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="Seguridad">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.RoleCode, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.DropDownListFor(m => m.RoleCode,
                                (SelectList)ViewBag.Role,
                                "------------------------------",
                                new { @class = "form-control btn btn-primary" })
                                    @*@Html.ValidationMessageFor(m => m.RoleCode)*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <span id="loading" class="ui-icon-loading" style="display: none">
                <img src="~/Content/images/ajax-loader.gif" style="max-height: 100%; max-width: 100%;" />
            </span>
            @Html.ActionLink("Cancelar", "Index", new { Area = "Security" }, new { @class = "btn btn-default" })
        </div>
    }
</div>


@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#BirthDate').datepicker({
                format: 'dd/mm/yyyy',
                language: 'es',
                startDate: new Date(1900, 01, 01),
                todayBtn: true,
                clearBtn: true,
                todayHighlight: true
            }).val('@Model.BirthDate');
        });

        function OnSuccess(data) {
            alert(data);
            window.location.href = data.newurl;
        }

        $("#CodDpto").change(function () {
            $.ajax({
                type: "POST",
                dataType: 'json',
                url: '@Url.Action("GetProvinces", "Person")',
                data: { codDpto: $("#CodDpto > option:selected").attr("value") },
                success: function (data) {
                    var items = [];
                    items.push("<option>-----------------------------</option>");
                    $.each(data, function () {
                        items.push("<option value=" + this.Value + ">" + this.Text + "</option>");
                    });
                    $("#CodProv").html(items.join(' '));
                }
            });
        });

        $("#CodProv").change(function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetDistricts", "Person")',
                data: {
                    codDpto: $("#CodDpto > option:selected").attr("value"),
                    codProv: $("#CodProv > option:selected").attr("value")
                },
                success: function (data) {
                    var items = [];
                    items.push("<option>-----------------------------</option>");
                    $.each(data, function () {
                        items.push("<option value=" + this.Value + ">" + this.Text + "</option>");
                    });
                    $("#CodDist").html(items.join(' '));
                }
            });
        });
    </script>
}

