@using Antlr.Runtime
@model StoreOnLine.Areas.Security.Models.PersonView
@{
    ViewBag.Title = "Security: Edit " + ViewBag.UserName;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var ajaxOpts = new AjaxOptions
    {
        UpdateTargetId = "tableBody",
        Url = Url.Action("Edit", "Person"),
        LoadingElementDuration = 1000,
        LoadingElementId = "loading",
        HttpMethod = "Post",
        OnSuccess = "OnSuccess"

    };
}
<div class="row">
    <div class="col-lg-12">
        @{Html.RenderPartial("_Title", new StoreOnLine.HtmlHelpers.PageTitleHelpers(
              (string)ViewBag.Big,
              (string)ViewBag.Small,
              (string)ViewBag.Area,
              (string)ViewBag.Controller,
              (string)ViewBag.Action)
              );}
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading ">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#Datos" data-toggle="tab">Datos</a></li>
            <li><a href="#Direccion" data-toggle="tab">Direccion</a></li>
            <li><a href="#Contacto" data-toggle="tab">Contacto</a></li>
            <li><a href="#Credenciales" data-toggle="tab">Credenciales</a></li>
            <li><a href="#Seguridad" data-toggle="tab">Seguridad</a></li>
        </ul>
    </div>
    @using (Ajax.BeginForm("Edit", "Person", ajaxOpts, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.Id)
        <div class="tab-content">
            <div class="tab-pane active" id="Datos">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ingrese el el nombre" } })
                                    @Html.ValidationMessageFor(m => m.FirstName)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ingrese los apellidos" } })
                                    @Html.ValidationMessageFor(m => m.LastName)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.BirthDate, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.BirthDate, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ingrese su fecha de Nacimiento" } })
                                    @Html.ValidationMessageFor(m => m.BirthDate)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="Direccion">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.HomeAddress.Line1, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.HomeAddress.Line1, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Direccion" } })
                                    @Html.ValidationMessageFor(m => m.HomeAddress.Line1)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.HomeAddress.Ubigeo.CodDpto, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.DropDownListFor(m => m.HomeAddress.Ubigeo.CodDpto,
                                            (SelectList)ViewBag.Dpto,
                                            "------------------------------",
                                            htmlAttributes: new { @class = "form-control btn btn-primary" })
                                    @Html.ValidationMessageFor(m => m.HomeAddress.Ubigeo.CodDpto)
                                    @Html.ValidationMessageFor(m => m.HomeAddress.Line2)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.HomeAddress.Line2, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.HomeAddress.Line2, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Direccion" } })
                                    @Html.ValidationMessageFor(m => m.HomeAddress.Line2)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.HomeAddress.Ubigeo.CodProv, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.DropDownListFor(m => m.HomeAddress.Ubigeo.CodProv,
                                        new SelectList(new List<SelectListItem> { }),
                                        "------------------------------",
                                        htmlAttributes: new { @class = "form-control btn btn-primary" })
                                    @Html.ValidationMessageFor(m => m.HomeAddress.Ubigeo.CodDpto)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.HomeAddress.Reference, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.HomeAddress.Reference, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Direccion" } })
                                    @Html.ValidationMessageFor(m => m.HomeAddress.Reference)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.HomeAddress.Ubigeo.CodDist, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.DropDownListFor(m => m.HomeAddress.Ubigeo.CodDist,
                                            new SelectList(new List<SelectListItem> { }),
                                            "------------------------------",
                                            htmlAttributes: new { @class = "form-control btn btn-primary" })
                                    @Html.ValidationMessageFor(m => m.HomeAddress.Ubigeo.CodDist)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="Contacto">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.ContactNumbers.NumberPhone, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.ContactNumbers.NumberPhone, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ingrese Numero fijo" } })
                                    @Html.ValidationMessageFor(m => m.ContactNumbers.NumberPhone)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.ContactNumbers.CellPhone, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.ContactNumbers.CellPhone, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ingrese Numero de Celular" } })
                                    @Html.ValidationMessageFor(m => m.ContactNumbers.CellPhone)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.ContactNumbers.Email, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.ContactNumbers.Email, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ingrese Numero de Celular" } })
                                    @Html.ValidationMessageFor(m => m.ContactNumbers.Email)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="Credenciales">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.User.UserName, new { @class = "control-label", PlaceHolder = "Ingrese un usuario" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.User.UserName, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ingrese una contraseña" } })
                                    @Html.ValidationMessageFor(m => m.User.UserName)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.User.UserPassword, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.User.UserPassword, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ingrese el nombre del usuario" } })
                                    @Html.ValidationMessageFor(m => m.User.UserPassword)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.IsStatus, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    <div class="bootstrap-switch bootstrap-switch-small">
                                        @Html.CheckBoxFor(m => m.IsStatus)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="Seguridad">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.Role.Id, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.DropDownListFor(m => m.Role.Id,
                                (List<SelectListItem>)ViewBag.Role,
                                "------------------------------",
                                htmlAttributes: new { @class = "form-control btn btn-primary" })
                                    @Html.ValidationMessageFor(m => m.Role.Id)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <span id="loading" class="ui-icon-loading" style="display: none">
               <img src="~/Content/images/ajax-loader.gif" style="max-height: 100%; max-width: 100%;" />
            </span>
            @Html.ActionLink("Cancelar", "Index", new { Area = "Security" }, new { @class = "btn btn-default" })
        </div>
    }
</div>


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#IsStatus').bootstrapSwitch({
                size: 'small',
                onText: 'Si',
                offText: 'No',
                onColor: 'success',
                offColor: 'danger',
                radioAllOff: 'false'
            });
        });

        function OnSuccess(data) {
            alert(data)
            window.location.href = data.newurl;
        }

        $("#HomeAddress_Ubigeo_CodDpto").change(function () {
            $.ajax({
                type: "POST",
                dataType: 'json',
                url: '@Url.Action("GetProvinces", "Person")',
                data: { codDpto: $("#HomeAddress_Ubigeo_CodDpto > option:selected").attr("value") },
                success: function (data) {
                    var items = [];
                    items.push("<option>-----------------------------</option>");
                    $.each(data, function () {
                        items.push("<option value=" + this.Value + ">" + this.Text + "</option>");
                    });
                    $("#HomeAddress_Ubigeo_CodProv").html(items.join(' '));
                }
            });
        });

        $("#HomeAddress_Ubigeo_CodProv").change(function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetDistricts", "Person")',
                data: {
                    codDpto: $("#HomeAddress_Ubigeo_CodDpto > option:selected").attr("value"),
                    codProv: $("#HomeAddress_Ubigeo_CodProv > option:selected").attr("value")
                },
                success: function (data) {
                    var items = [];
                    items.push("<option>-----------------------------</option>");
                    $.each(data, function () {
                        items.push("<option value=" + this.Value + ">" + this.Text + "</option>");
                    });
                    $("#HomeAddress_Ubigeo_CodDist").html(items.join(' '));
                }
            });
        });
    </script>
}

