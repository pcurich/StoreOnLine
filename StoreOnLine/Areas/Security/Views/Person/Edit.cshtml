                                <div class="col-lg-3">
                                    @Html.LabelFor(m => m.UserCode, new { @class = "control-label" })
                                </div>
                                <div class="col-lg-9">
                                    @Html.EditorFor(m => m.UserCode, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ingrese el nombre del usuario" } })
                                    @*@Html.ValidationMessageFor(m => m.UserCode)*@
                                </div>
                            </div>
