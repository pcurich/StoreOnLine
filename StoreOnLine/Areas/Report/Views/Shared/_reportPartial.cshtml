@model StoreOnLine.Areas.Report.Models.ReportView

@{
    if (Model.Headers != null)
    {

    <table id="DataTablePerson" class="table table-striped" >
        <thead>
            <tr>
                <th>
                    @Html.DisplayName(Model.Headers.CompanyName)
                </th>
                <th>
                    @Html.DisplayName(Model.Headers.CompanyBaseCode)
                </th>
                <th>
                    @Html.DisplayName(Model.Headers.Regimen)
                </th>
                <th>
                    @Html.DisplayName(Model.Headers.UserCode)
                </th>
                <th>
                    @Html.DisplayName(Model.Headers.UserName)
                </th>
                <th>
                    @Html.DisplayName(Model.Headers.Rol)
                </th>
                @foreach (var dia in Model.Headers.Days)
                {
                    <th>
                        @Html.DisplayName(dia.Number + "(" + dia.AbbNameDay + ")")
                    </th>
                }


            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.ReportDetails)
            {
                <tr>
                    <td>
                        @Html.DisplayName(item.CompanyName)
                    </td>

                    <td>
                        @Html.DisplayName(item.CompanyBaseCode)
                    </td>

                    <td>
                        @Html.DisplayName(item.Regimen)
                    </td>

                    <td>
                        @Html.DisplayName(item.UserCode)
                    </td>

                    <td>
                        @Html.DisplayName(item.UserName)
                    </td>

                    <td>
                        @Html.DisplayName(item.Rol)
                    </td>

                   @foreach (var dia in item.Days)
                    {
                    <td>
                        @Html.DisplayName(dia.Activity)
                    </td>
                    }
                </tr>
            }

        </tbody>
    </table>
    }
}

